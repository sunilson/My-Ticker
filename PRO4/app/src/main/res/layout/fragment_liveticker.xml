<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/livetickerBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_liveticker_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1" />

        <!-- Layout for Author Input -->
        <LinearLayout
            android:id="@+id/fragment_liveticker_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/fragment_liveticker_input"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:layout_weight="1"
                    style="@style/LivetickerInput"
                    />
                <ImageButton
                    android:id="@+id/fragment_liveticker_camera_button"
                    android:layout_marginLeft="-60dp"
                    style="?android:buttonBarButtonStyle"
                    android:paddingBottom="5dp"
                    android:src="@drawable/liveticker_input_camera_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--
            <ImageButton
                android:id="@+id/fragment_liveticker_camera_button"
                android:layout_width="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_height="50dp"
                android:background="@drawable/liveticker_input_camera_button_background"
                android:src="@drawable/ic_camera_alt_white_24dp"
                />
                -->

            <ImageButton
                android:id="@+id/fragment_liveticker_send_button"
                android:layout_width="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_height="50dp"
                android:background="@drawable/liveticker_input_send_button_background"
                android:foreground="?android:selectableItemBackground"
                android:src="@drawable/ic_send_white_24dp"
                />
        </LinearLayout>

        <!-- Layout for Visitors -->
        <LinearLayout
            android:id="@+id/fragment_liveticker_visitor_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fragment_liveticker_profile_picture"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/fragment_liveticker_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/fragment_liveticker_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/fragment_liveticker_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/subscribe" />
        </LinearLayout>
    </LinearLayout>
    <!-- Progress bar overlay; shown while login is in progress -->
    <include layout="@layout/progress_overlay" />
</RelativeLayout>
