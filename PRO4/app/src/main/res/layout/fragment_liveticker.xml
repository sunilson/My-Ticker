<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/livetickerBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_liveticker_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1" />

        <!-- Layout for Author Input -->
        <LinearLayout
            android:id="@+id/fragment_liveticker_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <include layout="@layout/liveticker_input"/>

            <ImageButton
                android:id="@+id/fragment_liveticker_send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/liveticker_input_send_button_background" />
        </LinearLayout>
    </LinearLayout>
    <!-- Progress bar overlay; shown while login is in progress -->
    <include layout="@layout/progress_overlay" />
</RelativeLayout>
