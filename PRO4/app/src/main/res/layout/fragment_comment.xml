<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/livetickerBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_comments_recyclerView"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="0px"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/fragment_comments_placeholder"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:text="No comments yet!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/text_background"
            />

        <!-- Layout for Author Input -->
        <LinearLayout
            android:id="@+id/fragment_comments_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp">

            <EditText
                android:id="@+id/fragment_comments_input"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:minHeight="50dp"
                android:layout_weight="1"
                style="@style/LivetickerInputWithoutCamera"
                 />

            <ImageButton
                android:id="@+id/fragment_comments_send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/liveticker_input_send_button_background" />

        </LinearLayout>

    </LinearLayout>
    <!-- Progress bar overlay; shown while login is in progress -->
    <include layout="@layout/progress_overlay" />
</RelativeLayout>
