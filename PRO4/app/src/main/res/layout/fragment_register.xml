<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="@string/register"
        android:textColor="@color/primary_text"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/registerFragment_email"
        style="@style/BasicEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:drawableLeft="@drawable/email_icon"
        android:hint="@string/register_email_hint"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/registerFragment_password"
        style="@style/BasicEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:drawableLeft="@drawable/lock_icon"
        android:hint="@string/register_password_hint"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/registerFragment_password2"
        style="@style/BasicEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif"
        android:ems="10"
        android:drawableLeft="@drawable/lock_icon"
        android:hint="@string/register_password2_hint"
        android:inputType="textPassword" />

    <include layout="@layout/big_submit_button_with_progress" />
</LinearLayout>
