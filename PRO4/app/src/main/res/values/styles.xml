<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SubmitButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/submit_button_drawable</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textColor">@color/primary_text_dark</item>
    </style>

    <style name="SubmitButtonLarge" parent="SubmitButton">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="SubscribeButton" parent="SubmitButton">

    </style>

    <style name="WhiteProgressBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="RecyclerViewElement">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/liveticker_content_element_background</item>
    </style>

    <style name="dialog_spinner" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Color when pressed -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">#dadada</item>
    </style>

    <style name="DescriptionTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="DescriptionSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="BasicEditText">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColorHint">@color/disabled_text</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="BigEditText">
        <item name="android:paddingRight">10dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:lines">5</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColorHint">@color/disabled_text</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="LivetickerInput">
        <item name="android:minHeight">50dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableLeft">@drawable/input_drawable_left</item>
        <item name="android:drawableStart">@drawable/input_drawable_left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:background">@drawable/liveticker_input_background</item>
        <item name="android:hint">@string/liveticker_input_placeholder</item>
        <item name="android:textColorHint">@color/disabled_text</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="LivetickerInputWithoutCamera" parent="LivetickerInput">
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="expandedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
